doctype html
html(lang='cn')
  head
    meta(charset='UTF-8')
    title {%$system.sitename%}
    meta(name='viewport', content='width=device-width')
    meta(name='keywords', content='{%$keywords%}')
    meta(name='description', content='{%$description%}')
    link(href="css/taobaoke.min.css",rel="stylesheet")
    // link(href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css",rel="stylesheet")
    block style

    script(type='text/javascript', src='http://libs.baidu.com/jquery/1.9.0/jquery.min.js')
    script(type='text/javascript', src='./js/common.js')
    // script(src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js")

    link(href="http://libs.baidu.com/bootstrap/2.3.2/css/bootstrap.min.css",rel="stylesheet")
    script(src="http://libs.baidu.com/bootstrap/2.3.2/js/bootstrap.min.js")

    script(type='text/javascript', src='./js/myapp.js')
  body
    .header
      .container
        .row
          .span-6
            // img(src="img/logo.jpg")
          .span-6
            a(href="#") QQ登录
            a(href="#") 微博登录
            |
            a(href="#") 登录
            a(href="#") 注册
            a(href="#") 联系我们
            a(href="#") 卖家报名
        .row
          .span-6
            img(src="img/logo.jpg")
          .span-6
            input(type="text")
            button(type="submit") 搜索
            button(type="button") 免费发布商品
    .menu
      .container
        .row
          .span-8
            ul.nav.nav-tabs(role="tablist")
              {%foreach from=$channel key=count item=i%}
              {%if $i.parentid eq 0%}
              li(class="{%if $i.id eq funcs::GET('channelid')%}active{%/if%}")
                a(href="{%if $i.type eq 1%}{%$i.link%}{%else%}?template=list&channelid={%$i.id%}{%/if%}") {%$i.name%}
              {%/if%}
              {%/foreach%}
          .span-4

    .container
      block main
    .footer
      .container
        p
          a(href="{%$weburl%}") {%$system.copyright%}
          a(href="{%$loginurl%}") @
          span 版权所有
        p 公司地址：{%$system.address%}
        p 联系电话：{%$system.phone%}
        p QQ：{%$system.qq%}
        p 主要业务：网站建设 手机+微信网站建设 广告传媒
      .container
        div {%$system.footcode%}
